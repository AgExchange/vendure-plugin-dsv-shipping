# ============================================
# DSV Shipping Plugin v0.4.0 Configuration
# ============================================

# ============================================
# OAuth Authentication (REQUIRED)
# ============================================

# Base API URL
DSV_API_BASE_URL=https://api.dsv.com

# OAuth token endpoint path
# Test: /my-demo/oauth/v1/token
# Production: /oauth/v1/token
DSV_TOKEN_ENDPOINT=/my-demo/oauth/v1/token

# Your DSV credentials (from DSV portal)
DSV_CLIENT_EMAIL=your-email@company.com
DSV_CLIENT_PASSWORD=your-password

# Access Token API subscription key (from DSV portal)
DSV_ACCESS_TOKEN_KEY=your-access-token-api-key

# ============================================
# API Endpoints (REQUIRED)
# ============================================

# Booking API endpoint
# Test: /my-demo/booking/v2/bookings
# Production: /booking/v2/bookings
DSV_BOOKING_ENDPOINT=/my-demo/booking/v2/bookings

# Quote API endpoint (OPTIONAL - Phase 5)
# Test: /qs-demo/quote/v1/quotes
# Production: /quote/v1/quotes
DSV_QUOTE_ENDPOINT=/qs-demo/quote/v1/quotes

# Tracking API endpoint (OPTIONAL - Phase 3)
# Test: /my-demo/tracking/v2
# Production: /tracking/v2
DSV_TRACKING_ENDPOINT=/my-demo/tracking/v2

# ============================================
# API Subscription Keys (REQUIRED)
# ============================================

# Booking API subscription key (REQUIRED for Phase 2)
DSV_BOOKING_API_KEY=your-booking-api-key

# Quote API subscription key (OPTIONAL - Phase 5)
DSV_QUOTE_API_KEY=your-quote-api-key

# Tracking API subscription key (OPTIONAL - Phase 3)
DSV_TRACKING_API_KEY=your-tracking-api-key

# Webhook API subscription key (OPTIONAL - Phase 4)
DSV_WEBHOOK_API_KEY=your-webhook-api-key

# Label API subscription key (OPTIONAL - Phase 5)
DSV_LABEL_API_KEY=your-label-api-key

# ============================================
# DSV Account Information (REQUIRED)
# ============================================

# Your DSV MDM account number (for freight payer and booking party)
DSV_TEST_MDM=your-mdm-account-number

# ============================================
# Booking Defaults (REQUIRED)
# ============================================

# Default Transport Mode (Road, Air, Sea, Rail)
DSV_DEFAULT_TRANSPORT_MODE=Road

# Default Package Type
# Valid values: BAG, CTN, PLT, PKG, CRT, DRM, CAN, CAS, LOT, CON, LOAD, EUR, CLL, HPL, KPL, IBC, PPL, QPL, PLL, UPL, RLL, EUP, LOD, IPL, GIB, JCN, PXL
# Recommended: CTN (Carton) for general goods, PLT (Pallet) for heavy items
DSV_DEFAULT_PACKAGE_TYPE=CTN

# Default Stackable Setting (STACKABLE, NO)
DSV_DEFAULT_STACKABLE=STACKABLE

# Default Incoterms
DSV_DEFAULT_INCOTERMS_CODE=EXW
DSV_DEFAULT_INCOTERMS_LOCATION=Warehouse

# ============================================
# Pickup Time Defaults (REQUIRED)
# ============================================

# Pickup time window (24-hour format HH:mm:ss)
DSV_DEFAULT_PICKUP_START=08:00:00
DSV_DEFAULT_PICKUP_END=17:00:00

# Days from order fulfillment to pickup
DSV_DEFAULT_PICKUP_DAYS_FROM_NOW=1

# ============================================
# Delivery Time Defaults (REQUIRED)
# ============================================

# Delivery time window (24-hour format HH:mm:ss)
DSV_DEFAULT_DELIVERY_START=08:00:00
DSV_DEFAULT_DELIVERY_END=17:00:00

# Days from order fulfillment to delivery
DSV_DEFAULT_DELIVERY_DAYS_FROM_NOW=3

# ============================================
# Units of Measurement (REQUIRED)
# ============================================

# Dimension unit (CM, M)
DSV_DEFAULT_UNIT_DIMENSION=CM

# Weight unit (KG)
DSV_DEFAULT_UNIT_WEIGHT=KG

# Volume unit (M3)
DSV_DEFAULT_UNIT_VOLUME=M3

# Loading space unit (LM)
DSV_DEFAULT_UNIT_LOADING_SPACE=LM

# Temperature unit (C)
DSV_DEFAULT_UNIT_TEMPERATURE=C

# ============================================
# Insurance Configuration (OPTIONAL)
# ============================================

# Enable insurance calculation (true/false)
DSV_INSURANCE_ENABLED=true

# Insurance category (STD, etc.)
DSV_INSURANCE_CATEGORY=STD

# Insurance currency (ZAR, USD, EUR, etc.)
DSV_INSURANCE_CURRENCY=ZAR

# ============================================
# Feature Flags
# ============================================

# Enable Quote API (Phase 5 - currently broken in DSV)
DSV_FEATURE_QUOTE=false

# Enable Booking API (Phase 2 - REQUIRED)
DSV_FEATURE_BOOKING=true

# Enable Tracking API (Phase 3)
DSV_FEATURE_TRACKING=false

# Enable Webhooks (Phase 4)
DSV_FEATURE_WEBHOOKS=false

# Enable Label Printing (Phase 5)
DSV_FEATURE_LABELS=false

# ============================================
# Other Settings
# ============================================

# Enable debug logging (true/false)
DSV_DEBUG_MODE=true

# Quote cache TTL in seconds (default: 300)
DSV_QUOTE_CACHE_TTL=300

# ============================================
# Production Settings (When Ready)
# ============================================
# When moving to production, change these:
# - DSV_TOKEN_ENDPOINT=/oauth/v1/token (remove /my-demo)
# - DSV_BOOKING_ENDPOINT=/booking/v2/bookings (remove /my-demo)
# - DSV_QUOTE_ENDPOINT=/quote/v1/quotes (remove /qs-demo)
# - DSV_TRACKING_ENDPOINT=/tracking/v2 (remove /my-demo)
# - DSV_DEBUG_MODE=false
# ============================================
